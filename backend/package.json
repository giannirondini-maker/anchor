{
  "name": "anchor-backend",
  "version": "1.0.0",
  "description": "Backend service for Anchor - macOS Native Chat Client for GitHub Copilot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ANCHOR_ENV=development tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "ANCHOR_ENV=development node dist/index.js",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "copilot",
    "chat",
    "macos",
    "anchor"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@github/copilot-sdk": "^0.1.19",
    "better-sqlite3": "^12.6.2",
    "express": "^4.18.0",
    "uuid": "^9.0.0",
    "ws": "^8.16.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
